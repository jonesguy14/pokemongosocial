<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="username"
        android:textColor="#000"
        android:textStyle="bold"
        android:id="@+id/textViewUsername"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Team"
        android:layout_marginStart="5dp"
        android:id="@+id/textViewTeam"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textViewUsername" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="+12"
        android:id="@+id/textViewLikes"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="2016-7-2 4:20"
        android:id="@+id/textViewTime"
        android:paddingEnd="5dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/textViewLikes" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewUsername" >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Here is the comment's content, it goes here hasd ioeadsf lkaseli ajsdlk ajsleij alsdkfja lseijf"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:id="@+id/textViewContent" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:src="@drawable/ic_thumbs_up_down_black_24dp"
            android:tint="#888888"
            android:background="@null"
            android:id="@+id/buttonThumbsUpDown"
            android:adjustViewBounds="true"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:scaleType="fitCenter"
            android:layout_margin="5dp"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>


</RelativeLayout>